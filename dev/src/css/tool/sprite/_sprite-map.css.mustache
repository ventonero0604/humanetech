{{#items}}
  {{#map}}
.Icon {
  position: relative;

  &::before {
    position: absolute;
    top: 0;
    left: 0;
    background-image: url({{{image}}});
    background-size: {{width}} {{height}};
    background-repeat: no-repeat;
    content: '';
  }
}
  {{/map}}
{{/items}}

{{#items}}
.Icon--{{name}} {
  width: {{px.width}};
  height: {{px.height}};

  &::before {
    width: {{px.width}};
    height: {{px.height}};
    background-position: {{px.offset_x}} {{px.offset_y}};
  }
}
{{/items}}
